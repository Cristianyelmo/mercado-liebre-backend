		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<!-- Show the "in-sale" products -->
			<div class="flexbox">
				<% products.forEach(({price,name,image,discount,id,category}) => { %>

					<% if (category === "in-sale") { %>
					
						<%- include('./partials/products',{
							id,
							image,
							discount,
